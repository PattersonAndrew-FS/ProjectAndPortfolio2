<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SignInSignUp.LoginPage">
   <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text=" Sign In Page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        
           <Label Text="Username" />
<Entry x:Name="userNameEntry" Placeholder="Username" />
           
          <Label Text="Password" />
<Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
     <Button x:Name="signIn" Text="Sign In" />     
<Button x:Name="signUp" Text="Sign Up" />
<Button x:Name="forgotUserNamePassword" Text="Forgot Username/Password" />
    </StackLayout>
</ContentPage>
