<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SignInSignUp.RegisterPage">
      <StackLayout>
        <Frame BackgroundColor="LightGreen" Padding="0" CornerRadius="0">
            <Label Text=" Sign Up Page" HorizontalTextAlignment="Center" TextColor="Black" FontSize="25"/>
        </Frame>

        <Label Text="First Name" />
<Entry x:Name="firstNameEntry" Placeholder="First Name" />
   <Label Text="Last Name" />
<Entry x:Name="lastNameEntry" Placeholder="Last Name" />
           <Label Text="Username" />
<Entry x:Name="userNameEntry" Placeholder="Username" />
           <Label Text="Email"/>
<Entry x:Name="emailEntry" Placeholder="Email" />
          <Label Text="Password" />
<Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
           <Label Text="Re-Type Password" />
<Entry x:Name="reTypePasswordEntry" Placeholder="Re-Type Password" IsPassword="True" />
<Button x:Name="signUp" Text="Sign Up" BackgroundColor="LightGreen" FontAttributes="Bold"/>
<Button x:Name="signIn" Text="Sign In" BackgroundColor="LightGreen" BorderWidth="-1" FontAttributes="Bold" />
    </StackLayout>
</ContentPage>
