<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignInSignUp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LightGreen" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Movie Info"  HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
     <SearchBar x:Name = "searchbar" Placeholder="Enter Movie Name" />
<ListView x:Name="searchresults"><ListView.ItemTemplate><DataTemplate>
<TextCell Text="{Binding Title}" Detail="" />
</DataTemplate></ListView.ItemTemplate></ListView>
    </StackLayout>

</ContentPage>
